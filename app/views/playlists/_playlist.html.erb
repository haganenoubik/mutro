<%= link_to playlist_path(playlist) do %>
  <div class="m-1 flex flex-col rounded-lg bg-slate-50 p-2 h-auto shadow-lg outline outline-1 outline-primary transition-transform duration-300 hover:-translate-y-2 hover:rotate-[-3deg]">
    <div class="m-2 text-center">
      <% if playlist.mood && playlist.mood.image_filename %>
        <%= image_tag(playlist.mood.image_filename, class: "mx-auto w-3/4 h-auto") %>
      <% else %>
        <%= image_tag('default-playlist-image.png', class: "mx-auto w-3/4 h-auto") %>
      <% end %>
    </div>
    <h2 class="mb-2 text-center text-sm font-bold text-secondary">
      <%= playlist.title %>
    </h2>
    <div class="text-xs text-slate-500">
      <p>Released by：<%= playlist.user.name %></p>
      <p>Released on：<%= playlist.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  </div>
<% end %>
