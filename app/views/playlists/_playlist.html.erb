<%= link_to playlist_path(playlist) do %>
  <div class="bg-slate-50 outline outline-1 outline-primary shadow-lg rounded-lg p-2 h-auto m-1 flex flex-col transition-transform duration-300 hover:-translate-y-2 hover:rotate-[-3deg]">
    <div class="text-center m-2">
      <% if playlist.mood && playlist.mood.image_filename %>
        <%= image_tag(playlist.mood.image_filename, class: "w-3/4 h-auto mx-auto") %>
      <% else %>
        <%= image_tag('default-playlist-image.png', class: "w-3/4 h-auto mx-auto") %>
      <% end %>
    </div>
    <h2 class="text-center text-sm font-bold text-secondary mb-2">
      <%= playlist.title %>
    </h2>
    <div class="text-xs text-gray-500">
      <p>Released by：<%= playlist.user.name %></p>
      <p>Released on：<%= playlist.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  </div>
<% end %>
