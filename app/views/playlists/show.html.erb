<div class="container mx-auto my-8 p-4">

  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-2"><%= @playlist.title %></h1>
    <%= simple_format(@playlist.description, {}, wrapper_tag: "p", class: "text-gray-600") %>

  </div>

  <div class="tracks">
    <% if @playlist.tracks.any? %>
      <h2 class="text-2xl font-semibold mb-4">Tracks</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @playlist.tracks.each do |track| %>
          <div class="track bg-white rounded-lg shadow p-4">
            <%= render 'playlists/track', track: track %>
            <p class="mt-2 text-sm font-medium text-gray-800"><%= track.title %> - <%= track.artist %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600">This playlist has no tracks yet.</p>
    <% end %>
  </div>
  <%= render partial: 'playlists/good_vibes_button', locals: { playlist: @playlist } %>
  <% if @playlist.user == current_user %>
      <%= link_to "https://twitter.com/share?url=#{playlist_url(@playlist)}&text=🎉Congratulations on releasing your playlist!🎉 %0a【#{@playlist.title}】%0a%0a #Mutro", target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Share to X" do %>
        <i class="fa-brands fa-x-twitter fa-xl"></i>
      <% end %>
      <%= link_to 'プレイリスト編集', edit_playlist_path(@playlist), class: 'btn btn-primary m-4' %>
    <% if current_user == @playlist.user %>
      <%= link_to 'プレイリストを削除', playlist_path(@playlist), data: { turbo_method: :delete, turbo_confirm: 'プレイリストを削除しますか？' }, class: "btn btn-error text-white" %>
    <% end %>
  <% end %>
  <div class="flex justify-center mt-8">
  <%= link_to '一覧に戻る', root_path, class: 'btn btn-outline btn-primary rounded-lg' %>
  </div>
</div>

<div class="comments mt-8">
  <h3 class="text-2xl font-bold mb-4">Comments</h3>
  <div class="space-y-4">
    <% @playlist.comments.each do |comment| %>
      <div class="p-4 bg-white rounded-lg shadow">
        <p class="font-bold text-primary mb-2"><%= comment.user.name %></p>
        <div class="chat chat-start">
          <div class="chat-bubble bg-gradient-to-r from-primary to-accent text-white"><%= simple_format(comment.content) %></div>
        </div>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="mt-6 bg-white p-6 rounded-lg shadow">
      <%= form_with(model: [ @playlist, Comment.new ], class: "space-y-4") do |form| %>
        <%= form.text_area :content, rows: 3, placeholder: "コメントを入力してください", required: true, class: "w-full p-2 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary" %>
        <%= form.submit "コメントする", class: "btn btn-outline btn-primary py-2 px-4" %>
      <% end %>
    </div>
  <% end %>
</div>
