<div class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-md">
    <h2 class="text-center mb-6 text-4xl font-bold">ユーザー新規登録</h2>

    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :name, class: "font-bold" %><br/>
        <%= f.text_field :name, class: "input input-sm input-bordered w-full", placeholder: "mutro user", autofocus: true %>
      </div>

      <div class="field mb-4">
        <%= f.label :email, class: "font-bold" %><br/>
        <%= f.email_field :email, class: "input input-sm input-bordered w-full", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password, class: "font-bold" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, class: "input input-sm input-bordered w-full", autocomplete: "new-password" %>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, class: "font-bold" %><br/>
        <%= f.password_field :password_confirmation, class: "input input-sm input-bordered w-full", autocomplete: "new-password" %>
      </div>

      <div class="btn btn-sm btn-outline btn-primary">
        <%= f.submit "Sign up", class: "w-full" %>
      </div>
    <% end %>
    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
