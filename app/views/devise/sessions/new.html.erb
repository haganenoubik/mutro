<div class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-center mb-6 text-4xl font-bold text-gray-700">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-bold text-gray-600 mb-2" %>
        <%= f.email_field :email, class: "input input-sm input-bordered w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50 focus:ring-indigo-300", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-bold text-gray-600 mb-2" %>
        <%= f.password_field :password, class: "input input-sm input-bordered w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-opacity-50 focus:ring-indigo-300", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm font-bold text-gray-600" %>
        </div>
      <% end %>

      <div class="flex items-center justify-between">
        <button type="submit" class="btn btn-sm btn-primary py-2 px-4 font-bold rounded-md shadow">
          ログイン
        </button>

        <div class="text-sm font-bold text-error">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

