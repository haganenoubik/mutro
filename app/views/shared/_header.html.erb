<div class="navbar bg-base-100 pb-24 border-b border-primary">
  <div class="flex-1">
    <a><%= link_to 'Mutro', root_path, class: "btn btn-ghost normal-case text-2xl text-primary font-black" %></a>
  </div>
  <div class="flex-none gap-2">
    <% if user_signed_in? %>
      <%= link_to new_playlist_path, class: "btn btn-sm btn-outline btn-primary" do %>
        作成
      <% end %>
      <%= link_to search_tracks_path, class: "btn btn-ghost btn-circle" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      <% end %>
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <%= image_tag 'K1Ey1wwTeYA6YQM1698909468_1698909495.png' %>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 border-primary rounded-box w-52">
          <li class="text-base font-bold text-primary">Playlists</li>
          <li class="text-primary">My Playlists</li>
          <li class="text-primary">My GoodVibes</li>
          <li class="text-base font-bold text-primary">Settings</li>
          <li><%= link_to 'My Page', user_path(current_user), class: "text-primary" %></li>
          <li><%= link_to 'Log Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "font-bold text-error" %></li>
        </ul>
      </div>
    <% else %>
      <%= link_to new_user_session_path, class: "btn btn-ghost btn-circle avatar" do %>
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <%= image_tag 'K1Ey1wwTeYA6YQM1698909468_1698909495.png' %>
          </div>
        </label>
      <% end %>
    <% end %>
  </div>
</div>
